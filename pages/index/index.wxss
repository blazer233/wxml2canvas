.share {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding-top: 40rpx;
    overflow: hidden;
}

.share__canvas {
    width: 700rpx;
    height: 500rpx;
    background: #f0f0f0;
    margin-bottom: 40rpx;
    font-size: 32rpx;
}

.share__title {
    width: 100%;
    margin-left: 80rpx;
    margin-bottom: 40rpx;
}

.share__canvas1-text {
    color: #000000;
}

.share__canvas1-text-2 {
    color: #ff0000;
    font-size: 36rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.share__canvas1-text-3 {
    color: #00ff00;
    padding-left: 40rpx;
    padding-top: 20rpx;
}

.share__canvas1-text-4 {
    color: #0000ff;
    margin-left: 20rpx;
    margin-top: 20rpx;
    width: 600rpx;
    text-align: center;
    background: rgba(255, 0, 0, 0.4);
    padding: 20rpx;
}

